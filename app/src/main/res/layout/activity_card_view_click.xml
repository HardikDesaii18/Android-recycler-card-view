<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_card_view_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hardikdesaii.recyclerviewdemo.CardViewClick">
<LinearLayout
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <ImageView
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:id="@+id/cardviewphoto"
            android:background="@mipmap/ic_launcher"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"

        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:id="@+id/cardviewname"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="25dp"

            android:text="DEMO TEXT"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/mainbg">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
        <EditText
            android:id="@+id/cardviewmessage"
            android:layout_height="match_parent"
            android:layout_width="250dp"
            android:hint="Start Typing here"
            android:textColor="#ffffff"/>
            <ImageButton
                android:layout_marginLeft="60dp"
                android:id="@+id/cardviewsend"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"

                />

        </LinearLayout>
</LinearLayout>
</LinearLayout>